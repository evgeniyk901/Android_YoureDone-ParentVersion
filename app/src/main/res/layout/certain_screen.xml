<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:id="@+id/header_title"
        android:background="#ca0c0a">

        <TextView
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="YOU&apos;RE DONE!"
            android:id="@+id/textView"
            android:textSize="30dp"
            android:typeface="sans"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:textColor="#ece909"
            android:shadowColor="#010000" />

    </RelativeLayout>

    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="BYE BYE BACK TALK"
        android:id="@+id/textView2"
        android:textColor="#19790a"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/header_title"
        android:layout_marginLeft="85dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/buttonView"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView2">

        <Button
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:id="@+id/add_bttn"
            android:layout_centerVertical="true"
            android:background="@drawable/addbutton"
            android:layout_marginLeft="20dp" />

        <Button
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:id="@+id/delete_btn"
            android:layout_centerVertical="true"
            android:layout_marginTop="-35dp"
            android:layout_marginLeft="120dp"
            android:background="@drawable/deletebutton" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/buttonView"
        android:layout_alignParentLeft="true"
        android:id="@+id/list_ids"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_key">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Please press ADD button"
            android:id="@+id/textView3"
            android:textColor="#0526fc"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp" />

        <ListView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:id="@+id/listView"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/textView3"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_key"
            android:listSelector="#09e4d9" />
    </RelativeLayout>>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/buttonView"
        android:layout_alignParentRight="true">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:id="@+id/imageView3"
            android:src="@drawable/lock"
            android:layout_alignParentTop="true" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="250dp"
            android:id="@+id/imageView4"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:src="@drawable/childimage"
            android:layout_marginTop="50dp" />
    </RelativeLayout>

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
          android:id="@+id/hidden_relative">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.9"
            android:background="#020000"></LinearLayout>

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@drawable/rounded_corner"
            android:longClickable="false"
            android:layout_centerInParent="true"
            android:id="@+id/alert_relative">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please enter kid&apos;s name and passcode"
                android:id="@+id/textView5"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="10dp" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:id="@+id/imageView7"
                android:background="@drawable/lock"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="25dp"
                android:layout_below="@id/textView5"
                android:alpha="0.4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:id="@+id/textView6"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="35dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_below="@id/textView5"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name_edittxt"
                android:background="@drawable/textedit1"
                android:layout_marginLeft="35dp"
                android:hint="Enter a name"
                android:textStyle="italic"
                android:textColor="#030000"
                android:textSize="15dp"
                android:layout_below="@id/textView6"
                android:textColorHint="#7f7d7d"
                android:inputType="text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Passcode"
                android:id="@+id/textView7"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_below="@id/name_edittxt"
                android:layout_marginLeft="35dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:id="@+id/passcode_edittxt"
                android:background="@drawable/textedit1"
                android:layout_marginLeft="35dp"
                android:hint="Enter a passcode"
                android:textColor="#000000"
                android:textSize="15dp"
                android:layout_below="@id/textView7"
                android:textStyle="italic"
                android:textColorHint="#797373"
                android:inputType="text" />

            <Button
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="OK"
                android:id="@+id/ok_btn"
                android:background="@drawable/redbutton"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="35dp"
                android:layout_below="@id/passcode_edittxt"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="CANCEL"
                android:id="@+id/cancel_btn"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="160dp"
                android:layout_below="@id/passcode_edittxt"
                android:background="@drawable/redbutton" />
        </RelativeLayout>
          </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/remove_parLayout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:alpha="0.9"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="@drawable/rounded_corner"
            android:id="@+id/remove_layout"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="-400dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Are you READY to remove this phone?"
                android:id="@+id/textView13"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="20dp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:id="@+id/imageView9"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:src="@drawable/removeper" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp">

                <Button
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:text="OK"
                    android:id="@+id/remove_OK_btn"
                    android:background="@drawable/bluebutton"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#010000" />

                <Button
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:text="CANCEL"
                    android:id="@+id/remove_cancel_btn"
                    android:layout_marginLeft="145dp"
                    android:layout_marginTop="-31dp"
                    android:background="@drawable/bluebutton"
                    android:textColor="#010000" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
